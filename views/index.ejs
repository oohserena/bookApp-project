<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- fontawesome -->
  
    <script
      src="https://kit.fontawesome.com/42a182743f.js"
      crossorigin="anonymous"
    ></script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Oleo+Script+Swash+Caps&family=Roboto:wght@300&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../public/css/home.css" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
  
    <!-- custom css -->
    <link rel="stylesheet" href="../public/css/main.css" />
    <title>Book Directory App</title>
  </head>
  <body>
    <!-- Navbar -->
    <%if(authUser){ %> <%-include('../views/partials/privateNavbar.ejs')%>
    <%}else{%> <%-include('../views/partials/publicNavbar.ejs')%> <%}%>
  
    <!-- header -->
  
    <!-- header -->
    <div class="header-wrapper">
      <div class="header-content">
        <h1>Books Catalogue</h1>
        <h2>Keep your books at one signle place</h2>
        <p>
          Lorem, ipsum dolor sit amet consectetur adipisicing elit. Illum, itaque
          provident. Molestiae enim quaerat deleniti, obcaecati
        </p>
        <a href="/api/books">
          <button class="add-btn">Start for free</button>
        </a>
      </div>
  
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320">
        <path
          fill="#ffffff"
          fill-opacity="1"
          d="M0,256L80,224C160,192,320,128,480,117.3C640,107,800,149,960,170.7C1120,192,1280,192,1360,192L1440,192L1440,320L1360,320C1280,320,1120,320,960,320C800,320,640,320,480,320C320,320,160,320,80,320L0,320Z"
        ></path>
      </svg>
    </div>
    <!-- header ends here -->
  
    <div class="home-heading-title">
      <h1>Latest Books created (<%=books.length%> )</h1>
    </div>
    <!-- card container -->
  
    <div class="card-container">
      <%if(books.length === 0){%>
      <h2>There are no books</h2>
      <% }else{%><%books.forEach((book)=>{%>
  
      <!-- item 1 -->
      <div class="card-item-wrapper">
        <div class="card-category">
          <div class="dot"></div>
          <div><%=book.category%></div>
        </div>
        <div class="card-content-wrapper">
          <h2 class="title"><%=book.title%></h2>
          <p class="description"><%=book.desc%></p>
          <div class="user">
            <p><%=book.author%></p>
            <p><%=book.createdAt%></p>
          </div>
        </div>
        <div class="card-item-footer">
          <%if(authUser && authUser._id.toString() ===
          book.createdBy.toString()){%>
          <a href="/api/books/<%=book._id%>">
            <button class="edit">
              <i class="fa-solid fa-pen-to-square"></i>
            </button>
          </a>
  
          <a href="/api/books/delete/<%=book._id%>">
            <button class="delete">
              <i class="fa-solid fa-trash-alt"></i>
            </button>
          </a>
          <% }%>
        </div>
      </div>
      <%})%> <%}%>
    </div>
    <!-- card container ends here -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>